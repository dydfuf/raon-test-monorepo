{
  "name": "raon-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "pnpm --filter @raonc/ui ui:add",
    "commit": "better-commits",
    "release": "turbo build --filter=docs^... && changeset publish"
  },
  "devDependencies": {
    "@raonc/eslint-config": "workspace:*",
    "@raonc/typescript-config": "workspace:*",
    "better-commits": "^1.12.0",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  }
}